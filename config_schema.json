    },
    "league_ncaam_enabled": {
      "type": "boolean",
      "default": true,
      "description": "Include NCAA men's basketball games."
    },
    "league_ncaaf_enabled": {
      "type": "boolean",
      "default": true,
      "description": "Include NCAA football games."
    },
    "ncaa_top25_only": {
      "type": "boolean",
      "default": false,
      "description": "Enable Top-25 filtering for NCAA leagues. If no team/conference filters are set, only Top-25 games are shown."
    },
    "ncaa_include_top25_with_conferences": {
      "type": "boolean",
      "default": false,
      "description": "When true and conference filters are set, include conference games OR any Top-25 game. Team filters still take priority."
    },
    "ncaaf_conferences": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "ACC",
          "AMERICAN ATHLETIC",
          "BIG 12",
          "BIG TEN",
          "C-USA",
          "INDEPENDENTS",
          "MAC",
          "MOUNTAIN WEST",
          "PAC-12",
          "SEC",
          "SUN BELT",
          "FCS INDEPENDENTS",
          "ASUN-WAC",
          "BIG SKY",
          "BIG SOUTH-OVC",
          "CAA",
          "FCS (IA) INDEPENDENTS",
          "IVY",
          "MEAC",
          "MISSOURI VALLEY",
          "NORTHEAST",
          "PATRIOT",
          "PIONEER",
          "SOCON",
          "SOUTHLAND",
          "SWAC",
          "UAC"
        ]
      },
      "default": [],
      "description": "NCAA football conferences to include. With ncaa_top25_only=true and ncaa_include_top25_with_conferences=true, this becomes conference OR Top-25."
    },
    "ncaam_conferences": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "ACC",
          "AMERICA EAST",
          "AMERICAN ATHLETIC",
          "ATLANTIC 10",
          "ATLANTIC SUN",
          "BIG 12",
          "BIG EAST",
          "BIG SKY",
          "BIG SOUTH",
