        ]
      },
      "default": [],
      "description": "NCAA men's basketball conferences to include. With ncaa_top25_only=true and ncaa_include_top25_with_conferences=true, this becomes conference OR Top-25."
    },
    "ncaaf_teams": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": [],
      "description": "NCAA football team abbreviations to include (for example: UGA, BAMA, OSU). If set, this filter takes priority over conference and Top-25 filters."
    },
    "ncaam_teams": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": [],
      "description": "NCAA men's basketball team abbreviations to include. If set, this filter takes priority over conference and Top-25 filters."
